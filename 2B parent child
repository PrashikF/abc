/* PARENT.C
 * Practical Assignment No. 2.B
 * - Reads N integers from user
 * - Sorts them using bubble sort
 * - Forks a child process
 * - Child is executed via execve("./child", args, NULL) with sorted numbers as command-line args
 * - Child prints the array in reverse order
 */

#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

/* Simple bubble sort to sort array in ascending order */
void bubbleSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++)
        for (int j = 0; j < n - i - 1; j++)
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
}

int main() {
    int n;

    /* Read number of elements from user */
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];                       // VLA to hold the elements
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    /* Sort array in ascending order before passing to child */
    bubbleSort(arr, n);

    pid_t pid = fork();               // create a child process

    if (pid < 0) {
        /* fork failed */
        perror("Fork failed");
        exit(1);
    } else if (pid == 0) {
        /* Child Process */

        /* 
         * Prepare arguments for execve:
         * args[0] = program name ("./child")
         * args[1..n] = string representations of sorted integers
         * args[n+1] = NULL  (terminator for argv)
         *
         * Note: we allocate small buffers with malloc for each number string.
         */
        char *args[n + 2]; // program name + n elements + NULL
        args[0] = "./child";

        for (int i = 0; i < n; i++) {
            char *str = malloc(10);    // allocate space for number string (ensure enough for int)
            sprintf(str, "%d", arr[i]); // convert int to string
            args[i + 1] = str;
        }

        args[n + 1] = NULL; // argv must be NULL-terminated

        /* Replace current process image with ./child, passing sorted numbers */
        execve("./child", args, NULL); // envp is NULL (inherit none)

        /* If execve returns, it failed */
        perror("execve failed");
        exit(1);
    } else {
        /* Parent Process waits for child to finish */
        wait(NULL);
    }

    return 0;
}

/* CHILD.C
 * - Executed by parent via execve
 * - Prints command-line arguments (sorted numbers) in reverse order
 *
 * Note:
 * argc - number of command-line arguments (including program name)
 * argv - array of pointers to C strings containing each argument
 */

#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    printf("\nChild Process: Array in Reverse Order:\n");

    /* argv[argc-1] ... argv[1] are the passed numbers (argv[0] is "./child") */
    for (int i = argc - 1; i >= 1; i--) {
        printf("%s ", argv[i]);
    }

    printf("\n");
    return 0;
}
