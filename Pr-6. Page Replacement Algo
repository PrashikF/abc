Assignment No. 6
Implement the C program for Page Replacement Algorithms: FCFS, LRU, and Optimal for frame size as minimum three.
 
#include <stdio.h>
int findLRU(int time[], int n)
{
   int min = time[0], pos = 0;
   for (int i = 1; i < n; ++i)
{
       if (time[i] < min)
{
           min = time[i];
           pos = i;
       }
   }
   return pos;
}
int main() {
   int frames[10], pages[30], temp[10], time[10];
   int n, m, pageFaults = 0, counter = 0, flag1, flag2, i, j, k, pos, max, futureIndex;
   printf("Enter number of pages: ");
   scanf("%d", &n);
   printf("Enter page numbers: ");
   for (i = 0; i < n; ++i)
       scanf("%d", &pages[i]);
   printf("Enter number of frames (min 3): ");
   scanf("%d", &m);
 
   // -------- FCFS Algorithm --------
   printf("\n--- FCFS Page Replacement ---\n");
   pageFaults = 0;
   for (i = 0; i < m; ++i)
       frames[i] = -1;
   j = 0;
   for (i = 0; i < n; ++i) {
       flag1 = 0;
       for (k = 0; k < m; ++k) {
           if (frames[k] == pages[i]) {
               flag1 = 1;
               break;
           }
       }
       if (flag1 == 0) { // Page Fault
           frames[j] = pages[i];
           j = (j + 1) % m;
           pageFaults++;
       }
       printf("Page %d -> ", pages[i]);
       for (k = 0; k < m; ++k)
           if (frames[k] != -1)
               printf("%d ", frames[k]);
       printf("\n");
   }
   printf("Total Page Faults (FCFS) = %d\n", pageFaults);
   // -------- LRU Algorithm --------
   printf("\n--- LRU Page Replacement ---\n");
   pageFaults = 0;
   for (i = 0; i < m; ++i)
       frames[i] = -1;
   for (i = 0; i < n; ++i) {
       flag1 = flag2 = 0;
       for (j = 0; j < m; ++j) {
           if (frames[j] == pages[i]) { // Page found
               counter++;
               time[j] = counter;
               flag1 = flag2 = 1;
               break;
           }
       }
       if (flag1 == 0) {
           for (j = 0; j < m; ++j) {
               if (frames[j] == -1) {
                   counter++;
                   pageFaults++;
                   frames[j] = pages[i];
                   time[j] = counter;
                   flag2 = 1;
                   break;
               }
           }
       }
 
       if (flag2 == 0) { // Replace least recently used
           pos = findLRU(time, m);
           counter++;
           pageFaults++;
           frames[pos] = pages[i];
           time[pos] = counter;
       }
       printf("Page %d -> ", pages[i]);
       for (k = 0; k < m; ++k)
           if (frames[k] != -1)
               printf("%d ", frames[k]);
       printf("\n");
   }
   printf("Total Page Faults (LRU) = %d\n", pageFaults);
 
   // -------- Optimal Algorithm --------
   printf("\n--- Optimal Page Replacement ---\n");
   pageFaults = 0;
   for (i = 0; i < m; ++i)
       frames[i] = -1;
   for (i = 0; i < n; ++i) {
       flag1 = flag2 = 0;
       for (j = 0; j < m; ++j) {
           if (frames[j] == pages[i]) {
               flag1 = flag2 = 1;
               break;
           }
       }
       if (flag1 == 0) {
           for (j = 0; j < m; ++j) {
               if (frames[j] == -1) {
                   pageFaults++;
                   frames[j] = pages[i];
                   flag2 = 1;
                   break;
               }
           }
       }
       if (flag2 == 0) { // Replace future-farthest page
           for (j = 0; j < m; ++j)
               temp[j] = -1;
           for (j = 0; j < m; ++j) {
               for (k = i + 1; k < n; ++k) {
                   if (frames[j] == pages[k]) {
                       temp[j] = k;
                       break;
                   }
               }
           }
          pos = -1;
           max = -1;
           for (j = 0; j < m; ++j) {
               if (temp[j] == -1) { // Not used in future
                   pos = j;
                   break;
               }
               if (temp[j] > max) {
                   max = temp[j];
                   pos = j;
               }
           }
           frames[pos] = pages[i];
           pageFaults++;
       }
      printf("Page %d -> ", pages[i]);
       for (k = 0; k < m; ++k)
           if (frames[k] != -1)
               printf("%d ", frames[k]);
       printf("\n");
   }
 
   printf("Total Page Faults (Optimal) = %d\n", pageFaults);
 
   return 0;
}

________________________________________________________________________________________________

#include <stdio.h>

/*
 * findLRU:
 *  - Helper for LRU algorithm.
 *  - `time[]` holds a usage timestamp (higher = used more recently).
 *  - Returns index of the frame with the smallest timestamp (least recently used).
 */
int findLRU(int time[], int n)
{
    int min = time[0], pos = 0;
    for (int i = 1; i < n; ++i) {
        if (time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

int main() {
    // frames: stores pages currently in frames
    // pages: reference string (page requests)
    // temp: used by Optimal algorithm to store future indices
    // time: used by LRU to store "last used" timestamps for each frame
    int frames[10], pages[30], temp[10], time[10];
    int n, m; // n = number of pages in reference string, m = number of frames
    int pageFaults = 0, counter = 0; // counter used as timestamp for LRU
    int flag1, flag2, i, j, k, pos, max, futureIndex;

    // Read inputs
    printf("Enter number of pages: ");
    scanf("%d", &n);
    printf("Enter page numbers: ");
    for (i = 0; i < n; ++i)
        scanf("%d", &pages[i]);

    printf("Enter number of frames (min 3): ");
    scanf("%d", &m);

    /* ------------------- FCFS (FIFO) Page Replacement -------------------
     * Idea: Replace pages in the order they arrived (first-in-first-out).
     * We maintain an index j that cycles through frames 0..m-1.
     */
    printf("\n--- FCFS Page Replacement ---\n");
    pageFaults = 0;

    // initialize frames as empty (-1)
    for (i = 0; i < m; ++i)
        frames[i] = -1;

    j = 0; // pointer to next frame to replace (FIFO order)
    for (i = 0; i < n; ++i) {
        flag1 = 0;

        // Check if page already in frame (hit)
        for (k = 0; k < m; ++k) {
            if (frames[k] == pages[i]) {
                flag1 = 1; // hit
                break;
            }
        }

        // If miss (page not found), replace frame at index j
        if (flag1 == 0) {
            frames[j] = pages[i];
            j = (j + 1) % m; // move FIFO pointer cyclically
            pageFaults++;
        }

        // Print current frame contents after this request
        printf("Page %d -> ", pages[i]);
        for (k = 0; k < m; ++k)
            if (frames[k] != -1)
                printf("%d ", frames[k]);
        printf("\n");
    }
    printf("Total Page Faults (FCFS) = %d\n", pageFaults);

    /* ------------------- LRU Page Replacement -------------------
     * Idea: Replace the page that was least recently used.
     * `time[]` holds timestamps (use increasing `counter`) â€” higher = more recent.
     */
    printf("\n--- LRU Page Replacement ---\n");
    pageFaults = 0;

    // initialize frames and timestamps
    for (i = 0; i < m; ++i) {
        frames[i] = -1;
        time[i] = 0;
    }
    counter = 0; // reset global time counter

    for (i = 0; i < n; ++i) {
        flag1 = flag2 = 0;

        // Check if page is already present (hit)
        for (j = 0; j < m; ++j) {
            if (frames[j] == pages[i]) {
                counter++;        // increment time (we accessed a page now)
                time[j] = counter; // update last used time for this frame
                flag1 = flag2 = 1; // hit -> no fault
                break;
            }
        }

        // If page not found, try to place in an empty frame first
        if (flag1 == 0) {
            for (j = 0; j < m; ++j) {
                if (frames[j] == -1) {
                    counter++;
                    pageFaults++;
                    frames[j] = pages[i]; // load page into free frame
                    time[j] = counter;    // record access time
                    flag2 = 1;            // placed into a free frame
                    break;
                }
            }
        }

        // If no free frame and it was a miss, replace LRU frame
        if (flag2 == 0) {
            pos = findLRU(time, m); // find least recently used frame
            counter++;
            pageFaults++;
            frames[pos] = pages[i]; // replace page
            time[pos] = counter;    // update its timestamp
        }

        // Print current frame contents after this request
        printf("Page %d -> ", pages[i]);
        for (k = 0; k < m; ++k)
            if (frames[k] != -1)
                printf("%d ", frames[k]);
        printf("\n");
    }
    printf("Total Page Faults (LRU) = %d\n", pageFaults);

    /* ------------------- Optimal Page Replacement -------------------
     * Idea: Replace the page that will not be used for the longest time in future.
     * This needs future knowledge (we scan the rest of the reference string).
     */
    printf("\n--- Optimal Page Replacement ---\n");
    pageFaults = 0;

    // initialize frames
    for (i = 0; i < m; ++i)
        frames[i] = -1;

    for (i = 0; i < n; ++i) {
        flag1 = flag2 = 0;

        // Check if page is already present (hit)
        for (j = 0; j < m; ++j) {
            if (frames[j] == pages[i]) {
                flag1 = flag2 = 1; // hit -> no replacement
                break;
            }
        }

        // If miss, put in empty frame (if any)
        if (flag1 == 0) {
            for (j = 0; j < m; ++j) {
                if (frames[j] == -1) {
                    pageFaults++;
                    frames[j] = pages[i]; // load page into free frame
                    flag2 = 1;
                    break;
                }
            }
        }

        // If no empty frame and miss, find the page with farthest next use
        if (flag2 == 0) {
            // temp[j] will store the index of next use of frames[j] in the future
            for (j = 0; j < m; ++j)
                temp[j] = -1; // -1 means 'not used again' by default

            // For each frame, find its next use index in the remaining reference string
            for (j = 0; j < m; ++j) {
                for (k = i + 1; k < n; ++k) {
                    if (frames[j] == pages[k]) {
                        temp[j] = k; // record next use index
                        break;
                    }
                }
            }

            // Choose the frame to replace:
            //  - If any temp[j] == -1, that page is not used again -> replace it (best choice).
            //  - Otherwise choose the page with maximum temp[j] (farthest next use).
            pos = -1;
            max = -1;
            for (j = 0; j < m; ++j) {
                if (temp[j] == -1) {
                    pos = j; // never used again -> immediate choice
                    break;
                }
                if (temp[j] > max) {
                    max = temp[j];
                    pos = j;
                }
            }

            // Replace chosen frame with current page
            frames[pos] = pages[i];
            pageFaults++;
        }

        // Print current frame contents after this request
        printf("Page %d -> ", pages[i]);
        for (k = 0; k < m; ++k)
            if (frames[k] != -1)
                printf("%d ", frames[k]);
        printf("\n");
    }

    printf("Total Page Faults (Optimal) = %d\n", pageFaults);

    return 0;
}

Enter number of pages: 12
Enter page numbers: 1 3 0 3 5 6 3 4 2 3 6 3
Enter number of frames (min 3): 3
